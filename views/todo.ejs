<html>
    <head>
        <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
        <script src="/assets/jquery-ui.js" type="text/javascript"></script>
        <script src="/assets/todo-list.js" type="text/javascript"></script>
        <link href="/assets/styles.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <form action="/todo" method="post">
        <h1>Registration Details</h1>
        <div id="todo-table">
            <table>
                <tr>
                    <td width="20%">Name :</td>
                    <td width="80%"><input type="text" size="20" name="name" required="required"/></td>
                </tr>
                <tr>
                    <td>Age :</td>
                    <td><input type="number" size="20" name="age" required="required"/></td>
                </tr>
                <tr>
                    <td>City :</td>
                    <td><input type="text" size="20" name="city" required="required"/></td>
                </tr>
                <tr>
                    <td>State :</td>
                    <td><input type="text" size="20" name="state" required="required"/></td>
                </tr>
                <tr>
                    <td>Zip :</td>
                    <td><input type="number" size="20" name="zip" required="required"/></td>
                </tr>
                <tr>
                    <td><input type="hidden" name="seq"/></td>
                    <td><button type="submit">Submit</button>&nbsp;&nbsp;<button type="button" onClick="js:resetForm();">Reset</button></td>
                </tr>
            </table>
        </div>
    </form>
    <% if(mode != 'UPDATE') { %>
    <table id="details">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Actions</th>
        </tr>
        <% for(var i=0; i < data.length; i++) { %>
        <tr>
            <td><%= data[i].name %></td>
            <td><%= data[i].age %></td>
            <td><%= data[i].city %></td>
            <td><%= data[i].state %></td>
            <td><%= data[i].zip %></td>
            <td>
                <img src="/assets/edit.png" alt="Edit" class="edit_record" id="<%= data[i].seq  %>"/>&nbsp;
                <img src="/assets/delete.png" alt="Delete" class="delete_record" id="<%= data[i].seq  %>"/>
            </td>
        </tr>
        <% } %>
    </table>
    <% } %>
    </body>
</html>

<script type="text/javascript">
    function resetForm()
    {
        window.location.href = window.location.href;
    }


    

</script>